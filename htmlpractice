    <p>
        <!-- table tags -->
        <h2>tables</h2>
        <table border="1">
            <tr>   <!--tr use to create new table row-->
              <th>Company</th><!--tr use to show table heading-->
              <th>Contact</th>
              <th>Country</th>
            </tr>
            <tr>
                <td>Alfreds Futterkiste</td>
                <!--td use to create new table colume-->
              <td>Maria Anders</td>
              <td>Germany</td>
            </tr>
            <tr>
              <td>Centro comercial Moctezuma</td>
              <td>Francisco Chang</td>
              <td>Mexico</td>
            </tr>
          </table>
          <!-- css
            table, th, td {
            border: 1px solid black; } -->
            <!-- border-collapse,background-color,border-radius: 10px:
            border-style: (dotted,dashed,solid,double,groove,ridge,inset,outset,none,hidden) -->

            <!-- use of colspan -->
            <h2>use of colspan</h2>
            <table border="1">
                <tr>
                  <th colspan="2">Name</th>
                  <th>Age</th>
                </tr>
                <tr>
                  <td>Jill</td>
                  <td>Smith</td>
                  <td>43</td>
                </tr>   
              </table>
            <!-- use of rowspan -->
            <h2>use of rowspan</h2>
            <table border="1">
                <tr>
                  <th>Name</th>
                  <td>Jill</td>
                </tr>
                <tr>
                  <th rowspan="2">Phone</th>
                  <td>555-1234</td>
                </tr>
                <tr>
                  <td>555-8745</td>
                </tr>
              </table>
              <!-- group of columns use to for styling -->
              <!-- <colgroup> 
                <col span="2" style="background-color: #D6EEEE">
              </colgroup> -->
    </p>

<hr>
    <!-- lists -->
    <h2>lists</h2>
    <!-- unorder list -->
    <h4>unorderlist</h4>
    <!-- list-style-type: disc,square,circle,none -->
    <ul>
      <li>Coffee</li>
      <li>Tea</li>
      <li>Milk</li>
    </ul>
    <!-- orderlist -->
    <h4>orderlist</h4>
    <!-- list-style-type:1,A,a,I,i -->
    <ol> <!--Defines an ordered list-->
      <li>Coffee</li> <!--Defines an list items-->
      <li>Tea</li>
      <li>Milk</li>
    </ol>

    <!-- description list -->
    <h4>description list</h4>
    <dl> <!--Defines an description list-->
      <dt>Coffee</dt> <!--Defines an term in description list-->
      <dd>- black hot drink</dd> <!--Defines an description of term in list-->
      <dt>Milk</dt>
      <dd>- white cold drink</dd>
    </dl>
    <!-- float:left to display a list horizontally -->
