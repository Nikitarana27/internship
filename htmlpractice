<!-- forms -->
<p>
<h2>forms</h2>
<form>
  <fieldset>
    <legend>example of forms:</legend>


  <b><label for="fname">First name:</label></b><br>
  <!-- defines a label for many form elements,useful for screen-reader user -->
  <input type="text" id="fname" name="fname"><br>
  <!-- takes input from user -->
  <!-- input type text will take text as an input -->


  <b><label for="lname">Last name:</label></b><br>
  <input type="text" id="lname" name="lname">
<br><br>


<!-- password -->
<b><label for="password">Password:</label></b>
<input type="password" id="password" name="password">
  <br/>

<!-- telephone -->
<label for="phone">Enter your phone number:</label>
<input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"><br><br>

<!-- email -->
<label for="email">Enter your email:</label>
<input type="email" id="email" name="email"><br><br>

<!-- url -->
<label for="homepage">Add your homepage:</label>
<input type="url" id="homepage" name="homepage"><br><br>

  <!-- date -->
  <label for="birthday">Birthday:</label>
  <input type="date" id="birthday" name="birthday"><br>

<!-- use of radio button -->
    <b><label for="gender">Gender:</label></b>
    <input type="radio" id="male" name="gender"><label for="male">male</label>
    <input type="radio" id="female" name="gender"><label for="female">female</label><br>


    <!-- use of checkbox -->
    <b><label for="hobby">Hobbies:</label></b>
    <input type="checkbox" id="dancing" name="hobby1"><label for="hobby1">dancing</label>
    <input type="checkbox" id="reading" name="hobby2"><label for="hobby2">reading</label>
    <input type="checkbox" id="travelling" name="hobby3"><label for="hobby3">travelling</label><br>

    <!-- number -->
    <b><label for="siblings">siblings:</label></b>
    <input type="number" id="siblings" name="siblings" min="0" max="5"><br>


    <!-- range -->
    <b><label for="price_range">Price(between 300000 and 800000):</label></b>
  <input type="range" id="price_range" name="price_range" min="300000" max="800000"><br>

  <!-- color -->
  <b><label for="favcolor">Select your favorite color:</label></b>
<input type="color" id="favcolor" name="favcolor" value="#ff0000"><br><br>


<!-- image -->
<b><label for="tamge">Upload Image here:</label></b>
<input type="image" src="../bullet1.gif" alt="Submit" width="48" height="48"><br><br>


<!-- file -->
<b><label for="myfile">Select a file:</label></b>
<input type="file" id="myfile" name="myfile">

  <!-- select tag -->
  <b><label for="cars">cars:</label></b>
  <select id="cars">
    <option value="volvo">Volvo</option>
    <option value="saab">Saab</option>
    <option value="opel">Opel</option>
    <option value="audi">Audi</option>
  </select>
<br>

<!-- audio -->
<audio controls>
  <source src="horse.ogg" type="audio/ogg">
  <source src="horse.mp3" type="audio/mpeg">
</audio><br>

<!-- video -->
<video width="320" height="240" controls>
  <source src="movie.mp4" type="video/mp4">
  <source src="movie.ogg" type="video/ogg">
</video><br>

  <!-- datalist -->
  <b><label for="browser">Choose your browser from the list:</label></b>
<input list="browsers" name="browser" id="browser">
  <datalist id="browsers">
    <option value="Edge">
    <option value="Firefox">
    <option value="Chrome">
    <option value="Opera">
    <option value="Safari">
  </datalist><br/>

  <!-- selection optgroup tag -->
  <b><label for="cars">Choose a car:</label></b>
  <select name="cars" id="cars">
    <optgroup label="Swedish Cars">
      <option value="volvo">Volvo</option>
      <option value="saab">Saab</option>
    </optgroup>
    <optgroup label="German Cars">
      <option value="mercedes">Mercedes</option>
      <option value="audi">Audi</option>
    </optgroup>
  </select><br>

  <!-- textarea -->
  <b><label for="address">Address:</label></p></b>
  <textarea id="address" name="address" rows="4" cols="50">Enter address here</textarea>
  <br>

  <input type="reset" value="reset">
  <input type="submit" value="submit">


</fieldset>
</form>
<!-- attribute: action-shows where to move after submitting the form -->
<!-- attribute: target- _blank,_self,_parent,_top,framename -->
<!-- attribute: method- get,post-->
</p>
