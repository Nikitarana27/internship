<h2>2D transformation</h2>
<!-- methods
translate()
rotate()
scaleX()
scaleY()
scale()
skewX()
skewY()
skew()
matrix()->matrix(scaleX(), skewY(), skewX(), scaleY(), translateX(), translateY()) -->


<!-- translate() -->
<h4>translate()</h4>
<!-- move from current position -->
<div style=" width: 300px;
height: 100px;
background-color: rgb(108, 212, 212);
border: 1px solid black;
transform: translate(40px,50px);">
    This div element is moved 50 pixels to the right, and 100 pixels down from its current position.
    </div>

<br>
<br>
<br>

<!-- rotate() -->
<h4>rotate()</h4>
<br>
<br>
<div style=" width: 300px;
height: 100px;
background-color: rgb(108, 212, 212);
border: 1px solid black;
transform: rotate(20deg);">
    This div element is moved 50 pixels to the right, and 100 pixels down from its current position.
    </div>

    <hr class="hr">
    <h2>3D transformation</h2>
<!-- tranform -->
<!-- rotateX()
rotateY()
rotateZ() -->

<div style="width: 300px;
height: 100px;
background-color: yellow;
border: 1px solid black;">
    This div element is rotated 150 degrees.
    </div>
    
<!-- rotatEX() -->
<h3>rotateX()</h3>
<div style="width: 300px;
height: 100px;
background-color: yellow;
border: 1px solid black; transform: rotateX(180deg);">
    This div element is rotated 150 degrees.
    </div>
    
<!-- rotatEY() -->
<h3>rotateY()</h3>
<div style="width: 300px;
height: 100px;
background-color: yellow;
border: 1px solid black; transform: rotateY(180deg);">
    This div element is rotated 150 degrees.
    </div>

 <!-- rotatEZ() -->
<h3>rotateZ()</h3>   
<div style="width: 300px;
height: 100px;
background-color: yellow;
border: 1px solid black; transform: rotateZ(90deg);">
    This div element is rotated 150 degrees.
    </div>
